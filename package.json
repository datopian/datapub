{
  "name": "datapub",
  "version": "0.1.0",
  "private": false,
  "main": "dist/core.js",
  "module": "dist/core.js",
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/datopian/datapub"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "ckan-client": "git+https://github.com/datopian/ckan-client-js.git#v0.4.0",
    "frictionless-ckan-mapper-js": "^1.0.0",
    "frictionless.js": "^0.13.3",
    "react-scripts": "^3.4.3",
    "react-table": "^7.5.0",
    "stream-to-array": "^2.3.0",
    "uuidv4": "^6.2.3"
  },
  "peerDependencies": {
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build:ckan": "react-scripts build",
    "build": "rm -rf dist && NODE_ENV=production babel src --out-dir dist --copy-files --ignore __tests__,spec.js,test.js,__snapshots__",
    "dist": "rm -rf dist/ && mkdir dist && mkdir dist/css && NODE_ENV=production babel src/ -d dist/ --copy-files",
    "test": "react-scripts test",
    "test:watch": "npm run test -- --coverage --watchAll",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy-storybook": "storybook-to-ghpages"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@storybook/addon-actions": "^6.0.16",
    "@storybook/addon-controls": "^6.0.16",
    "@storybook/addon-docs": "^6.0.21",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.0.16",
    "@storybook/addons": "^6.0.16",
    "@storybook/react": "^6.0.16",
    "@storybook/storybook-deployer": "^2.8.6",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "babel-loader": "^8.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.3",
    "eslint-plugin-react-hooks": "^4.1.2",
    "react-test-renderer": "^16.13.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  }
}
